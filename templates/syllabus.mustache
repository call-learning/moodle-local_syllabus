{{!
  @template local_syllabus/syllabus

  Syllabus display page

  The purpose of this template is to render a list.

  Classes required for JS:
  * none

  Data attributes required for JS:
  * data-component
  * data-area
  * data-itemid

  Context variables required for this template:
  * attributes Array of name / value pairs.

  Example context (json):
  {
      "courserawfields": {
        "fullnamehtml": "content"
      },
      "head": {
            "fields": [
                { "label" :"label", "iconhtml": "iconhtml", "html": "contenthtml"}
            ]
          },
      "side": {
            "fields": [
                { "label" :"label", "icon": "iconhtml", "html": "contenthtml"}
            ]
          }
  }
}}
<div class="syllabus-pres d-flex flex-column" id="course-{{#courseraw}}{{id}}{{/courseraw}}">
    <div class="row">
        <div class="col syllabus-title">
            {{#title}}
                {{#fields}}
                    {{#display}}
                        <div class="sfield icon-no-margin sfield-{{shortname}}">
                            {{#icon}}<i class="icon fa {{icon}}"></i>{{/icon}} <span class="sfield-content">{{{html}}}</span>
                        </div>
                    {{/display}}
                {{/fields}}
            {{/title}}
        </div>
    </div>
    <div class="container-fluid px-0 d-flex flex-column-reverse flex-lg-column">

        <div class="syllabus-head d-flex justify-content-center mb-4">
            {{#header}}
                {{#fields}}
                    {{#display}}
                        <div class="m-2">
                            <div class="sfield icon-no-margin sfield-{{shortname}}">
                                {{#label}}<span class="sfield-label">{{label}}</span>{{/label}}
                                {{#icon}}<i class="icon fa {{icon}}"> </i>{{/icon}} <span class="sfield-content">{{{html}}}</span>
                            </div>
                        </div>
                    {{/display}}
                {{/fields}}
            {{/header}}
        </div>

        <div class="d-flex flex-column-reverse flex-lg-row align-items-start">

            <div class="syllabus-content">
                {{#content}}
                    {{#fields}}
                        {{#display}}
                            <div class="sfield sfield-{{shortname}}">
                                {{#label}}<h2>{{label}}</h2>{{/label}}
                                <span class="sfield-content">{{{html}}}</span>
                            </div>
                        {{/display}}
                    {{/fields}}
                {{/content}}
            </div>

            <aside class="syllabus-side">
                <ul class="list-group">
                    {{#side}}
                        {{#fields}}
                            {{#display}}
                                <li class="sfield list-group-item border-0 icon-no-margin sfield-{{shortname}}">
                                    {{#label}}<h3>{{label}}</h3>{{/label}}
                                    {{#icon}}<i class="icon fa {{icon}}"></i>{{/icon}} <span class="content">{{{html}}}</span>
                                </li>
                            {{/display}}
                        {{/fields}}
                    {{/side}}
                </ul>
            </aside>
        </div>
    </div>
</div>
{{#js}}
require(['local_syllabus/syllabus'], function(syllabus) {
    syllabus.init();
});
{{/js}}
