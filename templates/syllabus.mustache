{{!
  @template local_syllabus/syllabus

  Syllabus display page

  The purpose of this template is to render a list.

  Classes required for JS:
  * none

  Data attributes required for JS:
  * data-component
  * data-area
  * data-itemid

  Context variables required for this template:
  * attributes Array of name / value pairs.

  Example context (json):
  {
      "courserawfields": {
        "fullnamehtml": "content"
      },
      "head": {
            "fields": [
                { "label" :"label", "iconhtml": "iconhtml", "html": "contenthtml"}
            ]
          },
      "side": {
            "fields": [
                { "label" :"label", "icon": "iconhtml", "html": "contenthtml"}
            ]
          }
  }
}}
<section class="syllabus-pres d-flex flex-column" id="course-{{#courseraw}}{{id}}{{/courseraw}}">
    <div class="row">
        <section class="col syllabus-title">
            {{#title}}
                {{#fields}}
                    {{#display}}
                        {{> local_syllabus/syllabus_field_title }}
                    {{/display}}
                {{/fields}}
            {{/title}}
        </section>
    </div>
    <div class="container-fluid px-0 d-flex flex-column-reverse flex-lg-column">

        <section class="syllabus-head d-flex justify-content-center mb-4">
            {{#header}}
                {{#fields}}
                    {{#display}}
                        <div class="m-2">
                            {{> local_syllabus/syllabus_field_head }}
                        </div>
                    {{/display}}
                {{/fields}}
            {{/header}}
        </section>

        <div class="d-flex flex-column-reverse flex-lg-row align-items-start">

            <section class="syllabus-content">
                {{#content}}
                    {{#fields}}
                        {{#display}}
                            {{> local_syllabus/syllabus_field_content }}
                        {{/display}}
                    {{/fields}}
                {{/content}}
            </section>

            <aside class="syllabus-side">
                <ul class="list-group">
                    {{#side}}
                        {{#fields}}
                            {{#display}}
                                {{> local_syllabus/syllabus_field_side }}
                            {{/display}}
                        {{/fields}}
                    {{/side}}
                </ul>
            </aside>
        </div>
    </div>
</section>